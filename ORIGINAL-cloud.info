# Select your Cloud Provider. Options are: GCE, AWS (soon), AZURE (soon)
cloud_selection: GCE
region: us-east1                        # Optional
zone:   "{{ region }}-c"                # Optional

# Specific information to create a Cloud
project_name: example
network_name: example               # Optional
subnetwork_name: example-subnet     # Optional
subnetwork_range: 192.168.0.0/16    # Optional

# OpenShift Specific Information
openshift_domain: example.com
openshift_master: 
   - { name: "example-master", machine: "{{ gce_default_machine_type }}",  tags: ["enable-ssh","openshift-master"], disk_docker: 10 }

openshift_infra:
   - { name: "example-infra",  machine: "{{ gce_default_machine_type }}",  tags: ["enable-ssh", "openshift-node", "openshift-infra-node"], disk_docker: 10 }

openshift_node:
   - { name: "example-node1", machine: "{{ gce_default_machine_type }}",  tags: ["enable-ssh","openshift-node"], disk_docker: 10 }
   - { name: "example-node2", machine: "{{ gce_default_machine_type }}",  tags: ["enable-ssh","openshift-node"], disk_docker: 10 }
#   - { name: "example-node3", machine: "{{ gce_default_machine_type }}",  tags: ["enable-ssh","openshift-node"], disk_docker: 10 }
#   - { name: "example-node4", machine: "{{ gce_default_machine_type }}",  tags: ["enable-ssh","openshift-node"], disk_docker: 10 }

openshift_firewall_rules:
   - { "name":"enable-ssh",                  "allow":"tcp:22",               "range":"0.0.0.0/0",              "tag":"enable-ssh" }
   - { "name":"master",                      "allow":"tcp:8443,9090",        "range":"0.0.0.0/0",              "tag":"openshift-master" }
   - { "name":"infranode",                   "allow":"tcp:80,443,1936",      "range":"0.0.0.0/0",              "tag":"openshift-infra-node" }
   - { "name":"internal-node-communication", "allow":"tcp:0-65535;udp:0-65535;icmp", "range":"{{ subnetwork_range }}", "tag":"openshift-node" }

### Packages needed to install before running OpenShift's installation
prereqs_packages:
  - vim
  - wget
  - git
  - net-tools
  - bind-utils
  - docker
  - atomic-openshift-excluder
  - atomic-openshift-docker-excluder
  - iptables-services
  - bridge-utils
  - bash-completion
  - docker
  - httpd-tools
docker_device: /dev/sdb
docker_device_partition: "{{ docker_device }}1"

### Most common addresses that it should be add into /etc/hosts
### (All values here will be add .cloudapps.{{ openshift_domain }})
common_cloudapps:
  - gogs
  - jenkins
  - nexus
  - sonarqube
  - tower
  - cloudforms
  - hawkular-metrics
  - git-rhmap-core
  - nagios-rhmap-core
  - rhmap
  - mbaas-rhmap-mbaas
  - docker
  - registry
  - cake
